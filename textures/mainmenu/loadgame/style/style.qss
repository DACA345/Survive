QPushButton {
    border: 1px solid #575757;
    border-radius: 5px;
    padding: 5px;

    background-color: #2E2E2E;
    color: #B0B0B0;

    font-size: 18px;
    font-family: Arial, sans-serif;

    selection-background-color: #3D3D3D;
    selection-color: #FFFFFF;
}

QPushButton:focus {
    border: 1px solid #6C6C6C;
    outline: none;
}

QPushButton:hover {
    background-color: #4F4F4F;
}